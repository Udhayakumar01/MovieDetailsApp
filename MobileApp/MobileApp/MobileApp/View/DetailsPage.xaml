<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MobileApp.View.DetailsPage">
    <ContentPage.Content>
        <StackLayout HorizontalOptions="Center">
            <Label x:Name="MovieName" HorizontalTextAlignment="Center" FontSize="Large" FontAttributes="Bold"/>
            <Image x:Name="MovieImage" HeightRequest="425" WidthRequest="425"/>
            <Label x:Name="MovieOverview" HorizontalTextAlignment="Center" FontSize="Medium" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>